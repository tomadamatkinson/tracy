{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure Utils",
      "type": "shell",
      "command": "cmake -Bbuild/native/utils -S. -DCMAKE_BUILD_TYPE=Debug -DTRACY_BUILD_TARGET=UTILS"
    },
    {
      "label": "Configure Profiler",
      "type": "shell",
      "command": "cmake -Bbuild/native/profiler -S. -DCMAKE_BUILD_TYPE=Debug -DTRACY_BUILD_TARGET=PROFILER"
    },
    {
      "label": "Configure Client",
      "type": "shell",
      "command": "cmake -Bbuild/native/client -S. -DCMAKE_BUILD_TYPE=Debug -DTRACY_BUILD_TARGET=CLIENT"
    },

    {
      "label": "Build Profiler GUI",
      "type": "shell",
      "command": "cmake --build build/native/profiler --config Debug --target profiler --parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Configure Profiler"]
    },
    {
      "label": "Build capture tool",
      "type": "shell",
      "command": "cmake --build build/native/utils --config Debug --target capture --parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Configure Utils"]
    },
    {
      "label": "Build csvexport tool",
      "type": "shell",
      "command": "cmake --build build/native/profiler --config Debug --target csvexport --parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Configure Profiler"]
    },
    {
      "label": "Build import-chrome tool",
      "type": "shell",
      "command": "cmake --build build/native/utils --config Debug --target import-chrome --parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Configure Utils"]
    },
    {
      "label": "Build update tool",
      "type": "shell",
      "command": "cmake --build build/native/utils --config Debug --target update --parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Configure Utils"]
    },
    {
      "label": "Build client library",
      "type": "shell",
      "command": "cmake --build build/native/client --config Debug --target TracyClient --parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Configure Client"]
    },
    {
      "label": "Build test application",
      "type": "shell",
      "command": "cmake --build build/native/client --config Debug --target tracy_test --parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Configure Client"]
    },
    {
      "label": "Build All",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build Profiler GUI",
        "Build capture tool",
        "Build csvexport tool",
        "Build import-chrome tool",
        "Build update tool",
        "Build client library",
        "Build test application"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Emscripten Profiler GUI",
      "type": "shell",
      "command": "emcmake cmake -Bbuild/emscripten -S. -DCMAKE_BUILD_TYPE=Debug -DTRACY_BUILD_TARGET=PROFILER && cmake --build build/emscripten --config Debug --target profiler --parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}

