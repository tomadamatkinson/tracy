  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Profiler GUI",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/native/profiler/bin/tracy",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "Build Profiler GUI",
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch capture tool",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/native/utils/bin/capture",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "Build capture tool"
    },
    {
      "name": "Launch update tool",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/native/utils/bin/update",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "Build update tool"
    },
    {
      "name": "Launch test application",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/native/client/bin/tracy_test",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/test",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "Build test application"
    },
    {
      "name": "Launch emscripten application",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/build/emscripten/bin",
      "program": "${workspaceFolder}/build/emscripten/bin/httpd.py",
      "preLaunchTask": "Build Emscripten Profiler GUI",
      "serverReadyAction": {
        "pattern": "Serving HTTP on 0.0.0.0 port (\\d+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }
  ]
}

